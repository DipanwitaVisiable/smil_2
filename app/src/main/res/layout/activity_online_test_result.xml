<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="?attr/colorPrimary"
            />

    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
        android:id="@+id/ll_date"
        android:layout_marginTop="@dimen/_50sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_total_question"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Total Question"
            android:textAllCaps="true"
            android:textColor="@color/colorBlack"
            android:textSize="14sp" />

        <View
            android:id="@+id/view"
            android:visibility="gone"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView_Concept_count"
            android:layout_toRightOf="@+id/textView_Concept_count"
            android:background="@color/colorGrey" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_total_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Time Taken"
            android:textAllCaps="false"
            android:textColor="@color/colorBlack"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_date"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:gravity="center"
        android:text=""
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp" />

    <LinearLayout
        android:id="@+id/ll_pieChart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_message"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="center"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:orientation="vertical">
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChart"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="200dp" />
        <LinearLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:id="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Incorrect"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="17sp"
                android:textColor="@color/colorPrimary"
                android:layout_weight="50"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Correct"
                android:textStyle="bold"
                android:textSize="17sp"
                android:gravity="center"
                android:textColor="@color/colorPresent"
                android:layout_weight="50"
                />
            <TextView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Not Answered"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="17sp"
                android:textColor="@color/colorGrey"
                android:layout_weight="33"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/l2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:id="@+id/inc_ans"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="@dimen/_13sdp"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:layout_weight="50"
                />
            <TextView
                android:id="@+id/c_ans"
                android:textSize="@dimen/_13sdp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:gravity="center"
                android:textColor="@color/colorPresent"
                android:layout_weight="50"
                />
            <TextView
                android:id="@+id/not_ans"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:gravity="center"
                android:textColor="@color/colorGrey"
                android:layout_weight="33"
                />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_view_solution"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/ll_pieChart"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:visibility="visible"
        android:background="@color/colorPresent"
        android:text="View Solution"
        android:textColor="@color/colorWhite"
        android:textAllCaps="false"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <!--<com.pnikosis.materialishprogress.ProgressWheel
            android:id="@+id/wheel_refresh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:visibility="gone"
            app:backgroundTintMode="src_over"
            app:matProg_barColor="@color/colorAccent"
            app:matProg_rimColor="@color/md_grey_500" />-->
        <ProgressBar
            android:id="@+id/wheel_refresh"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lin_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:weightSum="4"
        android:layout_alignParentBottom="true">


        <LinearLayout
            android:id="@+id/ll_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_weight="1"
            >

            <ImageView
                android:id="@+id/iv_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/img_home"
                android:tint="@color/colorPrimary"/>

            <TextView
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="15dp"
                android:textColor="#000000"
                android:fontFamily="@font/cabin_medium"
                />

        </LinearLayout>



        <LinearLayout
            android:id="@+id/ll_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_weight="1"
            >

            <ImageView
                android:id="@+id/iv_profile"
                android:src="@drawable/profile"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:tint="@color/colorPrimary"
                />

            <TextView
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textSize="15sp"
                android:textColor="#000000"
                android:fontFamily="@font/cabin_medium"
                />

        </LinearLayout>



        <LinearLayout
            android:id="@+id/ll_exam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_weight="1"
            >

            <ImageView
                android:id="@+id/iv_exam"
                android:src="@drawable/img_exam"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:tint="@color/colorPrimary"
                />

            <TextView
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exam"
                android:textSize="15sp"
                android:textColor="#000000"
                android:fontFamily="@font/cabin_medium"
                />

        </LinearLayout>



        <LinearLayout
            android:id="@+id/ll_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_weight="1"
            >

            <ImageView
                android:id="@+id/iv_share"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/img_share"
                android:tint="@color/colorPrimary"/>

            <TextView
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share"
                android:textSize="15dp"
                android:textColor="#000000"
                android:fontFamily="@font/cabin_medium"
                />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>