<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:layout_margin="@dimen/_10sdp"
        android:elevation="1dp"
        card_view:cardCornerRadius="5dp"
        card_view:contentPadding="5dp"
        card_view:cardBackgroundColor="#FF9800"
        android:background="#FF9800"
        app:cardElevation="5dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:background="#FF9800"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_type"
            android:layout_alignParentTop="true"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="@dimen/_18sdp"
            android:textAlignment="center"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:text="Communication type"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_28sdp"
        android:layout_marginRight="@dimen/_28sdp"
        android:layout_marginTop="@dimen/_60sdp"
        android:elevation="1dp"
        card_view:cardCornerRadius="5dp"
        card_view:contentPadding="5dp"
        card_view:cardBackgroundColor="#7F8FE8"
        android:background="#7F8FE8"
        app:cardElevation="5dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

    <RelativeLayout
        android:background="#7F8FE8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tv_subject"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="@dimen/_16sdp"
        android:textAlignment="center"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:text="Communication Subject"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/tv_message"
        android:layout_below="@+id/tv_subject"
        android:textColor="#ffffff"
        android:layout_marginTop="@dimen/_5sdp"
        android:textSize="@dimen/_12sdp"
        android:textAlignment="center"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:text="Communication message"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" />

    <RelativeLayout
        android:id="@+id/ll_date"
        android:layout_below="@+id/tv_message"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_from_date"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"
            android:textColor="#ffffff"
            android:textSize="@dimen/_14sdp"
            android:text="from date"
            android:layout_marginRight="@dimen/_3sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/tv_to_date"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:textColor="#ffffff"
            android:layout_marginLeft="@dimen/_3sdp"
            android:textSize="@dimen/_14sdp"
            android:textAlignment="center"
            android:text="to date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_approved"
        android:textColor="#ffffff"
        android:layout_below="@+id/ll_date"
        android:layout_marginLeft="@dimen/_3sdp"
        android:textSize="@dimen/_13sdp"
        android:textAlignment="center"
        android:text="to date"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_marginBottom="@dimen/_7sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" />

    </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>



