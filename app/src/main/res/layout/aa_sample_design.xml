            <TextView
                android:id="@+id/tv_quiz_name"
                android:layout_marginBottom="@dimen/_5sdp"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_17sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:textStyle="bold"
                android:text="Quiz Name"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_time"
                android:layout_below="@+id/tv_quiz_name"
                android:text="Time: 30 mins"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/colorWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_total_question"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_toRightOf="@+id/tv_time"
                android:layout_below="@+id/tv_quiz_name"
                android:text="Total questions: 20"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/colorWhite"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_test_date"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_below="@+id/tv_time"
                android:text="Exam date: 10-06-2020"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/colorWhite"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btn_start_test"
                android:text="Start Test"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="@dimen/_12sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/button_round_bg"
                android:backgroundTint="#0F9E14"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"/>
        </RelativeLayout>


    </androidx.cardview.widget.CardView>

